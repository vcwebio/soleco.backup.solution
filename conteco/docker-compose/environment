#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="backup.external"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_backup"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_backup"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_BACKUP_ENVIRONMENT,$CONTECO_DC_BACKUP_PORTS,COMMAND,$CONTECO_DC_BACKUP_NETWORKS,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_BACKUP_ENVIRONMENT=
export CONTECO_DC_BACKUP_PORTS=
export CONTECO_DC_BACKUP_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_GLOBAL_VOLUMES=""
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS artifactory.base
export CONTECO_DC_BACKUP_COMMAND="--keepalive:0"
export CONTECO_DC_BACKUP_VOLUMES="/home/test:/conteco/pwd"
export CONTECO_DC_BACKUP_DEPLOY_LABELS=
export CONTECO_DC_BACKUP_DEPLOY_MODE="replicated"
export CONTECO_DC_BACKUP_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_BACKUP_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.0"
export CONTECO_DC_BACKUP_DEPLOY_RESOURCES_LIMITS_MEMORY="24m"
export CONTECO_DC_BACKUP_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="5m"
# END SETTINGS artifactory.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
